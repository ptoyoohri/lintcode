class Solution {
public:
    string addBinary(string a, string b) 
    {   
        string output = "";
        for(int carry = 0, sum = 0, i = a.size() - 1, j = b.size() - 1; carry > 0 || i >= 0 || j >= 0; i--, j--)
        {
            sum = carry;
            if(i >= 0)
                sum = sum + (a[i]-48);
            if(j >= 0)
                sum = sum + (b[j]-48);
         
            carry = sum/2;
            sum = sum%2;
           
            output = char(sum + 48) + output;
            
        }
        return output;
    }
};
